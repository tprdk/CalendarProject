<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:rowCount="8"
    android:columnCount="2"
    android:background="@color/colorBackGround"
    tools:context=".Settings">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="1"
        android:clickable="true"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:textColor="@color/colorText"
        android:layout_marginLeft="5dp"
        android:textStyle="bold"
        android:layout_marginBottom="40dp"
        android:text="               ALARM SETTINGS" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        app:srcCompat="@drawable/ic_music_note_black_24dp" />

    <TextView
        android:id="@+id/textView_default_sound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="1"
        android:clickable="true"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:textColor="@color/colorText"
        android:layout_marginLeft="5dp"
        android:text="@string/settings_reminder_sound" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="0"
        app:srcCompat="@drawable/ic_access_time_black_24dp" />

    <Spinner
        android:id="@+id/spinner_default_alarm"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_row="2"
        android:layout_column="1" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="0"
        app:srcCompat="@drawable/ic_repeat" />

    <Spinner
        android:id="@+id/spinner_default_repeat"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_row="3"
        android:layout_column="1" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="4"
        android:layout_column="0"
        app:srcCompat="@drawable/ic_highlight" />

    <Spinner
        android:id="@+id/spinner_default_theme"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_row="4"
        android:layout_column="1" />

    <Button
        android:id="@+id/button_save_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="5"
        android:layout_column="1"
        android:layout_gravity="center"
        android:layout_marginRight="80dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/colorText"
        android:text="@string/settings_button_save" />


</GridLayout>